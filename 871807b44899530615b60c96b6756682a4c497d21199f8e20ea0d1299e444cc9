        // State
        let currentModuleIndex = 0;
        const completedModules = new Set();

        // Initialize
        function init() {
            renderModuleNav();
            renderModules();
            setActiveModule(0);
            updateProgress();
        }

        function renderModuleNav() {
            const nav = document.getElementById('module-nav');
            nav.innerHTML = modules.map((mod, idx) => `
                <button class="module-nav-item${idx === 0 ? ' active' : ''}" data-index="${idx}" onclick="setActiveModule(${idx})">
                    <span class="module-check">${idx + 1}</span>
                    <span class="module-nav-text">${mod.title}</span>
                </button>
            `).join('');
        }

        function renderModules() {
            const container = document.getElementById('modules-container');
            container.innerHTML = modules.map((mod, idx) => `
                <div class="module-card${idx === 0 ? ' active' : ''}" data-module="${idx}">
                    <div class="module-header">
                        <div class="module-number">Module ${mod.id}</div>
                        <h2 class="module-title">${mod.title}</h2>
                        <span class="module-goal"><i class="fas fa-bullseye"></i> ${mod.goal}</span>
                    </div>
                    <div class="module-body">
                        ${mod.sections.map((section, sIdx) => `
                            <div class="section${sIdx === 0 ? ' open' : ''}" data-section="${sIdx}">
                                <div class="section-header" onclick="toggleSection(this)">
                                    <span class="section-title">
                                        <i class="fas ${section.icon}"></i>
                                        ${section.title}
                                    </span>
                                    <i class="fas fa-chevron-down section-toggle"></i>
                                </div>
                                <div class="section-content">
                                    <div class="section-body">
                                        ${section.content}
                                    </div>
                                </div>
                            </div>
                        `).join('')}

                        ${mod.deliverables ? `
                            <div class="deliverables">
                                <div class="deliverables-title"><i class="fas fa-file-alt"></i> Deliverables</div>
                                ${mod.deliverables.map(d => `
                                    <div class="deliverable-item">
                                        <i class="fas fa-check-circle"></i>
                                        <div><strong>${d.title}</strong><br><span style="color: var(--text-muted); font-size: 0.9rem;">${d.description}</span></div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}

                        <div class="module-nav-buttons">
                            <button class="nav-btn prev" onclick="prevModule()" ${idx === 0 ? 'disabled' : ''}>
                                <i class="fas fa-arrow-left"></i> Previous
                            </button>
                            <button class="complete-btn ${completedModules.has(idx) ? 'completed' : ''}" onclick="toggleComplete(${idx})">
                                <i class="fas ${completedModules.has(idx) ? 'fa-check' : 'fa-bookmark'}"></i>
                                ${completedModules.has(idx) ? 'Completed' : 'Mark Complete'}
                            </button>
                            <button class="nav-btn next" onclick="nextModule()" ${idx === modules.length - 1 ? 'disabled' : ''}>
                                Next <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function setActiveModule(idx) {
            currentModuleIndex = idx;

            // Update nav
            document.querySelectorAll('.module-nav-item').forEach((item, i) => {
                item.classList.toggle('active', i === idx);
            });

            // Update cards
            document.querySelectorAll('.module-card').forEach((card, i) => {
                card.classList.toggle('active', i === idx);
            });

            // Scroll to modules section on mobile
            if (window.innerWidth < 900) {
                document.getElementById('modules-section').scrollIntoView({ behavior: 'smooth' });
            }
        }

        function toggleSection(header) {
            const section = header.parentElement;
            section.classList.toggle('open');
        }

        function prevModule() {
            if (currentModuleIndex > 0) {
                setActiveModule(currentModuleIndex - 1);
            }
        }

        function nextModule() {
            if (currentModuleIndex < modules.length - 1) {
                setActiveModule(currentModuleIndex + 1);
            }
        }

        function toggleComplete(idx) {
            if (completedModules.has(idx)) {
                completedModules.delete(idx);
            } else {
                completedModules.add(idx);
            }

            // Update button
            const card = document.querySelector(`.module-card[data-module="${idx}"]`);
            const btn = card.querySelector('.complete-btn');
            btn.classList.toggle('completed', completedModules.has(idx));
            btn.innerHTML = completedModules.has(idx)
                ? '<i class="fas fa-check"></i> Completed'
                : '<i class="fas fa-bookmark"></i> Mark Complete';

            // Update nav item
            const navItem = document.querySelector(`.module-nav-item[data-index="${idx}"]`);
            navItem.classList.toggle('completed', completedModules.has(idx));
            navItem.querySelector('.module-check').innerHTML = completedModules.has(idx)
                ? '<i class="fas fa-check"></i>'
                : (idx + 1);

            updateProgress();
        }

        function updateProgress() {
            const completed = completedModules.size;
            const total = modules.length;
            const percent = (completed / total) * 100;

            document.getElementById('progress-text').textContent = `${completed}/${total}`;
            document.getElementById('progress-fill').style.width = `${percent}%`;
        }

        function scrollToHero() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function scrollToModules() {
            document.getElementById('modules-section').scrollIntoView({ behavior: 'smooth' });
        }

        // Initialize on load
        init();
    </script>
</body>
</html>
